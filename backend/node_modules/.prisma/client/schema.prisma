// prisma/schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id          Int       @id @default(autoincrement())
  firstName   String
  lastName    String
  plant       String
  email       String    @unique
  phone       String
  createdAt   DateTime  @default(now())
  signedOutAt DateTime? // nullable sign-out time
  meetingWith String? // who they're here to meet
}
