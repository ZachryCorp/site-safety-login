// backend/prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlserver"
  url      = env("DATABASE_URL")
}

model User {
  id                Int       @id @default(autoincrement())
  firstName         String
  lastName          String
  email             String    @unique
  phone             String
  plant             String? // Made optional to allow migration
  meetingWith       String?
  signedOutAt       DateTime?
  trainingCompleted Boolean?  @default(false) // Made optional
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt

  // Training records for this user
  trainingRecords TrainingRecord[]
}

model TrainingRecord {
  id                Int       @id @default(autoincrement())
  userId            Int
  plant             String
  videoWatched      Boolean   @default(false)
  videoCompletedAt  DateTime?
  quizPassed        Boolean   @default(false)
  quizScore         Int? // Store score as percentage (0-100)
  quizCompletedAt   DateTime?
  trainingCompleted Boolean   @default(false)
  completedAt       DateTime?
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt

  // Relations
  user User @relation(fields: [userId], references: [id])

  // Ensure one training record per user per plant
  @@unique([userId, plant])
  @@index([userId])
  @@index([plant])
}
