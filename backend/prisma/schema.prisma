// backend/prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"  // Changed back to sqlite
  url      = "file:./dev.db"
}

model User {
  id          Int       @id @default(autoincrement())
  firstName   String
  lastName    String
  plant       String
  email       String    @unique
  phone       String
  meetingWith String?
  signedOutAt DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}