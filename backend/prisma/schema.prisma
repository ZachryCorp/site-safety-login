// backend/prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlserver"
  url      = env("DATABASE_URL")
}

model User {
  id                Int       @id @default(autoincrement())
  firstName         String
  lastName          String
  plant             String
  email             String    @unique
  phone             String
  meetingWith       String?
  trainingCompleted Boolean   @default(false)
  trainingDate      DateTime?  // Add this line if missing
  signedOutAt       DateTime?
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt
}